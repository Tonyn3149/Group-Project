{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-jsx",   
    "module": "NodeNext",
    "moduleResolution": "NodeNext",  
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "config/**/*.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}